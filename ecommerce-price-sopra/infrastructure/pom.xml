<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.ecommerce.prices</groupId>
		<artifactId>ecommerce-price</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
  
  	<artifactId>ecommerce-price-infrastructure</artifactId>
    <name>ecommerce-price-infrastructure</name>
    <description>Capa de infraestructura: API REST</description>
    
    <properties>
		<springdoc-openapi-starter-webmvc-ui.version>2.1.0</springdoc-openapi-starter-webmvc-ui.version>
	</properties>
    
	<dependencies>
	
		<dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>ecommerce-price-domain</artifactId>
            <version>${project.version}</version>
        </dependency>
        
		<dependency>
    		<groupId>org.springframework.boot</groupId>
    		<artifactId>spring-boot-starter-data-jpa</artifactId>
		</dependency>
        
        <!-- OPENAPI GENERATOR DEPENDENCIES -->
 		<dependency>
			<groupId>org.openapitools</groupId>
			<artifactId>jackson-databind-nullable</artifactId>
			<version>0.2.6</version>
		</dependency>
		<dependency>
			<groupId>org.springdoc</groupId>
			<artifactId>springdoc-openapi-starter-webmvc-ui</artifactId>
			<version>${springdoc-openapi-starter-webmvc-ui.version}</version>
		</dependency>
        
  	</dependencies>
  	
  	<build>
		<plugins>
  	
  			<plugin>
				<groupId>org.openapitools</groupId>
			    <artifactId>openapi-generator-maven-plugin</artifactId>
			    <version>7.1.0</version>
				<executions>
					<execution>
						<id>spring-boot-api</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<inputSpec>${project.basedir}/src/main/resources/OpenApiRestConfiguration.yml</inputSpec>
							<generatorName>spring</generatorName>
							<skipOverwrite>true</skipOverwrite>
							<library>spring-boot</library>
							<generateModelDocumentation>false</generateModelDocumentation>
							<generateApiTests>true</generateApiTests>
							<generateApiDocumentation>false</generateApiDocumentation>
 							<apiPackage>com.ecommerce.price.adapter.in.rest.interfaces</apiPackage>
                			<modelPackage>com.ecommerce.price.adapter.in.rest.interfaces.dto</modelPackage>                			
                			<configOptions>
								<useSpringBoot3>true</useSpringBoot3>
								<unhandledException>true</unhandledException>
								<booleanGetterPrefix>is</booleanGetterPrefix>
								<interfaceOnly>true</interfaceOnly>
								<readOnly>true</readOnly>
								<java8>true</java8>
								<dateLibrary>java8</dateLibrary>
							</configOptions>
						</configuration>
					</execution>
				</executions>				
			</plugin>
  		</plugins>
  	</build>

</project>